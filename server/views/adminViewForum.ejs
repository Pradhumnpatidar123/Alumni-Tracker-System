                        </div>
                    </div>
                    <div class="col-lg-8 col-md-7 d-none d-lg-block">
                        <div class="row">
                            <div class="col-4">
                                <div class="top-bar-item">
                                    <div class="top-bar-icon">
                                        <i class="flaticon-calendar"></i>
                                    </div>
                                    <div class="top-bar-text">
                                        <h3>Collage Time</h3>
                                        <p>Mon - Fri <br>
                                            9:00am - 05:00pm</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="top-bar-item">
                                    <div class="top-bar-icon">
                                        <i class="flaticon-call"></i>
                                    </div>
                                    <div class="top-bar-text">
                                        <h3>Contact Us</h3>
                                        <p>+012 872 8888</p>
                                        <p>+91 989856541</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="top-bar-item">
                                    <div class="top-bar-icon">
                                        <i class="flaticon-send-mail"></i>
                                    </div>
                                    <div class="top-bar-text">
                                        <h3>Email Us</h3>
                                        <p>Collage@gmail.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top Bar End -->

        <%- include('./adminHeader.ejs') %>


        
        <!-- About Start -->
        <div class="about wow fadeInUp" data-wow-delay="0.1s">
                <!-- <form action="/admin/adminAddEvent" method="post" class="form-group"> -->
                <div class="container">
                    <div class="row align-items-center table table-responsive">
                        <div class="section-header text-left">
                            <h3> Forum Lists</h3>
                            <span>
                                <%= message %>
                            </span>
                        </div>
                        <div class="col-lg-12 col-md-12" style="margin-top: -33px;">
                        <% if (forumAllData.length==0) {%>
                            No Record Found
                        <%  }else{ %> 
                            <table style="font-size: 13px;" border='1' cellspacing='0' cellpadding='8'>
                                <thead>
                                    <tr>
                                        <th>S.no</th>
                                        <th>ForumId</th>
                                        <th>AlumniId</th>
                                        <th>ForumTopic</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>StartDate</th>
                                        <th>StartTime</th>
                                        <th>Join</th>
                                        <th>Update</th>
                                        <th>Delete</th>
                                      
                                    </tr>
                                </thead>
                                <tbody>
                                    <% forumAllData.forEach((obj,index )=> {%>
                                    <tr>
                                        <td> <%=index+1%></td>
                                        <td> <%=obj.forumId%></td>
                                        <td> <%=obj.alumniId%></td>
                                        <td> <%=obj.forumTopic%></td>
                                        <td> <%=obj.description%></td>
                                        <td> <%=obj.status%></td>
                                        <td> <%=obj.startDate%></td>
                                        <td> <%=obj.startTime%></td>
                                       
                                        <td>
                                            <form action="/admin/adminJoinForum" method="post">
                                                <input type="hidden" value="<%=obj.forumId %>" name="forumId" id="forumId">
                                                <input type="submit" value="Join">
                                            </form>
                                        </td>
                                        <td>
                                            <form action="/admin/adminUpdateForum" method="post">
                                                <input type="hidden" value="<%=obj.forumId %>" name="forumId" id="forumId">
                                                <input type="submit" value="Update">
                                            </form>
                                        </td>
                                        <td>
                                            <form action="/admin/adminDeleteForum" method="post">
                                                <input type="hidden" value="<%=obj.forumId %>" name="forumId" id="forumId">
                                                <input type="submit" value="Delete">
                                            </form>
                                        </td>
                                        
                                    </tr>     
                                    <%}); %>
                                </tbody>
                            </table>
                            <% } %>   
                        </div>
                        
                    </div>
                <!-- </form> -->
                </div>

                <!-- About End -->


                <!-- Footer Start -->
                <div class="footer wow fadeIn" data-wow-delay="0.3s">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="footer-contact">
                                    <h2>Office Contact</h2>
                                    <p><i class="fa fa-map-marker-alt"></i>123 Street, New York, USA</p>
