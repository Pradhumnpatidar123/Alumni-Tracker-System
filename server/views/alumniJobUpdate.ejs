                                        <h3>Contact Us</h3>
                                        <p>+012 872 8888</p>
                                        <p>+91 989856541</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="top-bar-item">
                                    <div class="top-bar-icon">
                                        <i class="flaticon-send-mail"></i>
                                    </div>
                                    <div class="top-bar-text">
                                        <h3>Email Us</h3>
                                        <p>Collage@gmail.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top Bar End -->

        <%- include('./alumniHeader.ejs') %>


        
        <!-- About Start -->
        <div class="about wow fadeInUp" data-wow-delay="0.1s">
                <form action="/alumni/alumniJobUpdate" method="post" class="form-group">
                <div class="container">
                    <div class="section-header text-left">
                        <h3>Alumni Update Job Posting </h3>
                        <small style="color: green;"><span>
                            <%= message %>
                        </span></small>
                    </div>
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-6" >
                            <input type="hidden" class="form-control" value="<%=jobData.jobId%>"  name="jobId">
                            <input type="hidden" class="form-control" value="<%=jobData.alumniId%>"  name="alumniId">
                            <input type="text" class="form-control" value="<%=jobData.company%>" placeholder="Enter Company Name" name="company"
                                id="company">
                            <input type="text" class="form-control" placeholder="Enter Post Name" value="<%=jobData.post %>" name="post"
                                id="post">
            
                            <input type="text" class="form-control" id="department" name="department" value="<%=jobData.department %>" placeholder="Enter Department">

                            <input type="number" class="form-control" id="vacancy" name="vacancy" placeholder="Enter Number of Vacancy" value="<%=jobData.vacancy %>">
                            <input type="number" class="form-control" id="salary" name="salary" placeholder="Enter Salary" value="<%=jobData.salary %>">
                            <input type="text" class="form-control" id="location" name="location" placeholder="Enter Location" value="<%=jobData.location %>">
                            <select name="bond" id="bond" class="form-control" >
                                <option value="<%=jobData.bond %>"><%=jobData.bond %></option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                            
                            <select name="timings" id="timings" class="form-control" value="<%=jobData.timings %>">
                                <option value="<%=jobData.timings %>"><%=jobData.timings %></option>
                                <option value="8:00 AM To 4:00 PM">8:00 AM To 4:00 PM</option>
                                <option value="9:00 AM To 6:00 PM">9:00 AM To 6:00 PM</option>
                                <option value="10:00 AM To 7:00 PM">10:00 AM To 7:00 PM</option>
                                <option value="11:00 AM To 8:00 PM">11:00 AM To 8:00 PM</option>
                                <option value="Flexible 9 Hour">Flexible 9 Hour</option>
                                <option value="Hours According to Part Time">Hours According to Part Time</option>
                            </select>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="about-text">
                                
                                Apply From Date
                                <input type="date" class="form-control" id="applyFromDate" value="<%=jobData.applyFromDate %>"
                                name="applyFromDate">
                                Apply Till Date
                                <input type="date" class="form-control" id="applyTillDate" value="<%=jobData.applyTillDate %>"
                                name="applyTillDate">
                                <select name="mode" id="mode" class="form-control" >
                                    <option value="<%=jobData.mode %>"><%=jobData.mode %></option>
                                    <option value="Fresher">Fresher</option>
                                    <option value="6+ Month">6+ Month</option>
                                    <option value="1+ Year">1+ Year</option>
                                    <option value="2+ Year">2+ Year</option>
                                    <option value="5+ Year">5+ Year</option>
                                    <option value="10+ Year">10+ Year</option>
                                </select>
                                <select name="type" id="type" class="form-control" >
                                    <option value="<%=jobData.type %>"><%=jobData.type %></option>
                                    <option value="Full Time">Full Time</option>
                                    <option value="Part Time">Part Time</option>
                                    </select>
                                
                                <input type="submit" class="btn btn-warning btn-block" value="Update Job Posting">
                                <input type="reset" class="btn btn-danger btn-block" value="Reset">
                            </div>
                        </div>
                    </div>
                </form>
                </div>

                <!-- About End -->


                <!-- Footer Start -->
                <div class="footer wow fadeIn" data-wow-delay="0.3s">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="footer-contact">
                                    <h2>Office Contact</h2>
                                    <p><i class="fa fa-map-marker-alt"></i>123 Street, New York, USA</p>
                                    <p><i class="fa fa-phone-alt"></i>+012 345 67890</p>
                                    <p><i class="fa fa-envelope"></i>info@example.com</p>
                                    <div class="footer-social">
                                        <a href=""><i class="fab fa-twitter"></i></a>
                                        <a href=""><i class="fab fa-facebook-f"></i></a>
                                        <a href=""><i class="fab fa-youtube"></i></a>
                                        <a href=""><i class="fab fa-instagram"></i></a>
                                        <a href=""><i class="fab fa-linkedin-in"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="footer-link">
                                    <h2>Services Areas</h2>
                                    <a href="">Building Construction</a>
                                    <a href="">House Renovation</a>
